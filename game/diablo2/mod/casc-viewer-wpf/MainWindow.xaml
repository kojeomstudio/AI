<Window x:Class="CascViewerWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="{Binding Version, StringFormat='D2R CASC Viewer {0}'}" Height="600" Width="900">
    <Window.Resources>
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
    </Window.Resources>
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="2*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Top Bar: Path Selection and Mask -->
        <Grid Grid.Row="0" Margin="0,0,0,10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="150"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            
            <TextBox Grid.Column="0" Text="{Binding D2RPath, UpdateSourceTrigger=PropertyChanged}" Margin="0,0,5,0" VerticalContentAlignment="Center" ToolTip="D2R Installation Directory"/>
            <Button Grid.Column="1" Content="Browse" Command="{Binding BrowseCommand}" Width="70" Margin="0,0,10,0"/>
            
            <TextBox Grid.Column="2" Text="{Binding SearchMask, UpdateSourceTrigger=PropertyChanged}" Margin="0,0,5,0" VerticalContentAlignment="Center" ToolTip="Search Mask (e.g., data\*)"/>
            <Button Grid.Column="3" Content="Load CASC" Command="{Binding LoadCommand}" Width="90"/>
        </Grid>

        <!-- Main Area: TreeView and Details -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <TreeView x:Name="CascTreeView" ItemsSource="{Binding CascNodes}" Grid.Column="0" SelectedItemChanged="CascTreeView_SelectedItemChanged">
                <TreeView.Resources>
                    <ContextMenu x:Key="ItemContextMenu">
                        <MenuItem Header="Extract File" Command="{Binding DataContext.ExtractCommand, RelativeSource={RelativeSource AncestorType=Window}}"/>
                    </ContextMenu>
                </TreeView.Resources>
                <TreeView.ItemContainerStyle>
                    <Style TargetType="{x:Type TreeViewItem}">
                        <Setter Property="ContextMenu" Value="{StaticResource ItemContextMenu}"/>
                    </Style>
                </TreeView.ItemContainerStyle>
                <TreeView.ItemTemplate>
                    <HierarchicalDataTemplate ItemsSource="{Binding Children}">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="{Binding Icon}" Margin="0,0,5,0"/>
                            <TextBlock Text="{Binding Name}"/>
                        </StackPanel>
                    </HierarchicalDataTemplate>
                </TreeView.ItemTemplate>
            </TreeView>

            <GridSplitter Grid.Column="1" Width="5" HorizontalAlignment="Center" VerticalAlignment="Stretch" Background="LightGray"/>

            <StackPanel Grid.Column="2" Margin="10,0,0,0">
                <TextBlock Text="File Details" FontWeight="Bold" FontSize="16" Margin="0,0,0,10"/>
                <TextBlock Text="{Binding SelectedNode.Name, StringFormat='Name: {0}'}"/>
                <TextBlock Text="{Binding SelectedNode.Size, StringFormat='Size: {0}'}"/>
                <TextBlock Text="{Binding SelectedNode.Type, StringFormat='Type: {0}'}"/>
                <TextBlock Text="Storage: CASC Storage (Internal)" Foreground="Gray" Margin="0,5,0,0" Visibility="{Binding CanExtract, Converter={StaticResource BooleanToVisibilityConverter}}"/>
                <Button Content="Extract Selected" Command="{Binding ExtractCommand}" Margin="0,20,0,0" Width="120" HorizontalAlignment="Left"/>
                <TextBlock Text="* Folder extraction is recursive." FontSize="10" Foreground="Gray" Margin="0,5,0,0" Visibility="{Binding SelectedNode.IsFolder, Converter={StaticResource BooleanToVisibilityConverter}, FallbackValue=Collapsed}"/>
            </StackPanel>

            <!-- Loading Overlay -->
            <Grid Grid.ColumnSpan="3" Background="#CCFFFFFF" Visibility="{Binding IsBusy, Converter={StaticResource BooleanToVisibilityConverter}}">
                <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                    <ProgressBar IsIndeterminate="True" Width="300" Height="25"/>
                    <TextBlock Text="{Binding LoadingStage}" HorizontalAlignment="Center" Margin="0,10,0,0" FontWeight="Bold" FontSize="16" Foreground="#FF2D72BC"/>
                    <TextBlock Text="{Binding StatusText}" HorizontalAlignment="Center" Margin="0,5,0,0" FontSize="14"/>
                    <TextBlock Text="Please wait until scanning is complete..." HorizontalAlignment="Center" Margin="0,10,0,0" Foreground="Gray" FontSize="12"/>
                </StackPanel>
            </Grid>
        </Grid>

        <!-- Splitter for Logs -->
        <GridSplitter Grid.Row="2" Height="5" HorizontalAlignment="Stretch" VerticalAlignment="Center" Background="LightGray" Margin="0,5"/>

        <!-- Log Viewer -->
        <GroupBox Grid.Row="3" Header="Logs">
            <ListBox ItemsSource="{Binding Logs}" ScrollViewer.VerticalScrollBarVisibility="Auto">
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <TextBlock Text="{Binding DisplayText}">
                            <TextBlock.Style>
                                <Style TargetType="TextBlock">
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding Level}" Value="Error">
                                            <Setter Property="Foreground" Value="Red"/>
                                        </DataTrigger>
                                        <DataTrigger Binding="{Binding Level}" Value="Warning">
                                            <Setter Property="Foreground" Value="Orange"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </TextBlock.Style>
                        </TextBlock>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>
        </GroupBox>

        <!-- Status Bar -->
        <StatusBar Grid.Row="4" Margin="0,5,0,0">
            <StatusBarItem>
                <TextBlock Text="{Binding StatusText}"/>
            </StatusBarItem>
        </StatusBar>
    </Grid>
</Window>
