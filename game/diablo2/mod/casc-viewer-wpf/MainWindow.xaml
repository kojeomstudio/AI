<Window x:Class="CascViewerWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="D2R CASC Viewer (WPF)" Height="600" Width="900">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Top Bar: Path Selection -->
        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,10">
            <TextBox x:Name="PathTextBox" Width="600" Margin="0,0,10,0" VerticalContentAlignment="Center"/>
            <Button Content="Browse" Click="BrowseButton_Click" Width="80" Margin="0,0,10,0"/>
            <Button Content="Load CASC" Click="LoadButton_Click" Width="100"/>
        </StackPanel>

        <!-- Main Area: TreeView and Details -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <TreeView x:Name="CascTreeView" Grid.Column="0" SelectedItemChanged="CascTreeView_SelectedItemChanged">
                <TreeView.Resources>
                    <ContextMenu x:Key="ItemContextMenu">
                        <MenuItem Header="Extract File" Click="ExtractFile_Click"/>
                    </ContextMenu>
                </TreeView.Resources>
                <TreeView.ItemContainerStyle>
                    <Style TargetType="{x:Type TreeViewItem}">
                        <Setter Property="ContextMenu" Value="{StaticResource ItemContextMenu}"/>
                    </Style>
                </TreeView.ItemContainerStyle>
                <TreeView.ItemTemplate>
                    <HierarchicalDataTemplate ItemsSource="{Binding Children}">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="{Binding Name}"/>
                        </StackPanel>
                    </HierarchicalDataTemplate>
                </TreeView.ItemTemplate>
            </TreeView>

            <GridSplitter Grid.Column="1" Width="5" HorizontalAlignment="Center" VerticalAlignment="Stretch" Background="LightGray"/>

            <StackPanel Grid.Column="2" Margin="10,0,0,0">
                <TextBlock Text="File Details" FontWeight="Bold" FontSize="16" Margin="0,0,0,10"/>
                <TextBlock x:Name="FileNameText" Text="Name: -"/>
                <TextBlock x:Name="FileSizeText" Text="Size: -"/>
                <TextBlock x:Name="FileTypeText" Text="Type: -"/>
                <Button x:Name="ExtractButton" Content="Extract Selected" Margin="0,20,0,0" Width="120" HorizontalAlignment="Left" Click="ExtractFile_Click" IsEnabled="False"/>
            </StackPanel>
        </Grid>

        <!-- Status Bar -->
        <StatusBar Grid.Row="2" Margin="0,10,0,0">
            <StatusBarItem>
                <TextBlock x:Name="StatusText" Text="Ready"/>
            </StatusBarItem>
        </StatusBar>
    </Grid>
</Window>
