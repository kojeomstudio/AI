<Window x:Class="CascViewerWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="D2R CASC Viewer (WPF)" Height="600" Width="900">
    <Window.Resources>
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
    </Window.Resources>
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Top Bar: Path Selection -->
        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,10">
            <TextBox x:Name="PathTextBox" Text="{Binding D2RPath, UpdateSourceTrigger=PropertyChanged}" Width="600" Margin="0,0,10,0" VerticalContentAlignment="Center"/>
            <Button Content="Browse" Command="{Binding BrowseCommand}" Width="80" Margin="0,0,10,0"/>
            <Button Content="Load CASC" Command="{Binding LoadCommand}" Width="100"/>
        </StackPanel>

        <!-- Main Area: TreeView and Details -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <TreeView x:Name="CascTreeView" ItemsSource="{Binding CascNodes}" Grid.Column="0" SelectedItemChanged="CascTreeView_SelectedItemChanged">
                <TreeView.Resources>
                    <ContextMenu x:Key="ItemContextMenu">
                        <MenuItem Header="Extract File" Command="{Binding DataContext.ExtractCommand, RelativeSource={RelativeSource AncestorType=Window}}"/>
                    </ContextMenu>
                </TreeView.Resources>
                <TreeView.ItemContainerStyle>
                    <Style TargetType="{x:Type TreeViewItem}">
                        <Setter Property="ContextMenu" Value="{StaticResource ItemContextMenu}"/>
                    </Style>
                </TreeView.ItemContainerStyle>
                <TreeView.ItemTemplate>
                    <HierarchicalDataTemplate ItemsSource="{Binding Children}">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="{Binding Icon}" Margin="0,0,5,0"/>
                            <TextBlock Text="{Binding Name}"/>
                        </StackPanel>
                    </HierarchicalDataTemplate>
                </TreeView.ItemTemplate>
            </TreeView>

            <GridSplitter Grid.Column="1" Width="5" HorizontalAlignment="Center" VerticalAlignment="Stretch" Background="LightGray"/>

            <StackPanel Grid.Column="2" Margin="10,0,0,0">
                <TextBlock Text="File Details" FontWeight="Bold" FontSize="16" Margin="0,0,0,10"/>
                <TextBlock Text="{Binding SelectedNode.Name, StringFormat='Name: {0}'}"/>
                <TextBlock Text="{Binding SelectedNode.Size, StringFormat='Size: {0}'}"/>
                <TextBlock Text="{Binding SelectedNode.Type, StringFormat='Type: {0}'}"/>
                <Button Content="Extract Selected" Command="{Binding ExtractCommand}" Margin="0,20,0,0" Width="120" HorizontalAlignment="Left"/>
            </StackPanel>

            <!-- Loading Overlay -->
            <Grid Grid.ColumnSpan="3" Background="#80FFFFFF" Visibility="{Binding IsBusy, Converter={StaticResource BooleanToVisibilityConverter}}">
                <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                    <ProgressBar IsIndeterminate="True" Width="200" Height="20"/>
                    <TextBlock Text="{Binding StatusText}" HorizontalAlignment="Center" Margin="0,10,0,0" FontWeight="Bold"/>
                </StackPanel>
            </Grid>
        </Grid>

        <!-- Status Bar -->
        <StatusBar Grid.Row="2" Margin="0,10,0,0">
            <StatusBarItem>
                <TextBlock Text="{Binding StatusText}"/>
            </StatusBarItem>
        </StatusBar>
    </Grid>
</Window>
